@using System.Security.Claims
@model SMS.Web.Models.StudentPagedViewModel
@{
    ViewData["Title"] = "Student List";
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Registered Students</h2>
        <div>
            <span class="text-muted me-3">Welcome, @User.FindFirst("FullName")?.Value (@User.Identity?.Name)</span>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">Logout</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Qualifications</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@student.StudentId</td>
                                <td>@student.FirstName @student.LastName</td>
                                <td>@student.Age</td>
                                <td>@student.Gender</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNumber</td>
                                <td>
                                    <button class="btn btn-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#qual_@student.Id">
                                        View (@student.Qualifications.Count)
                                    </button>
                                </td>
                                <td>
                                    @if (student.Id.ToString() == loggedInUserId)
                                    {
                                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Read Only</span>
                                    }
                                </td>
                            </tr>
                            <tr class="collapse" id="qual_@student.Id">
                                <td colspan="8">
                                    <div class="p-3 bg-light rounded">
                                        <h6>Qualifications for @student.FirstName</h6>
                                        <table class="table table-sm table-bordered bg-white">
                                            <thead>
                                                <tr>
                                                    <th>Course</th>
                                                    <th>University</th>
                                                    <th>Year</th>
                                                    <th>Percentage</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var qual in student.Qualifications)
                                                {
                                                    <tr>
                                                        <td>@qual.CourseName</td>
                                                        <td>@qual.University</td>
                                                        <td>@qual.YearOfPassing</td>
                                                        <td>@qual.Percentage%</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 py-3">
            <nav aria-label="Student list pagination">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2">
                <small class="text-muted">Showing @Model.Students.Count() of @Model.TotalItems students</small>
            </div>
        </div>
    </div>
</div>
